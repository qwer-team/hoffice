{% extends 'ItcAdminBundle::layouts/edit.html.twig' %}

{% import  'ItcAdminBundle::layouts/edit.html.twig' as forms %}

{% block header %}

    <h1>Reversal\Reversal edit</h1>

{% endblock %}
    
{% block form %}

    <form action="{{ path('reversal_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

        <button class = 'menu_sys_save_button' type="submit"></button>

        {% set formPdl %}

            {% for pdline in edit_form.pdlines %}

                    {{ form_row( pdline.oa1 ) }}
                    {{ form_row( pdline.N ) }}
                    {{ form_row( pdline.summa1 ) }}

            {% endfor %}

        {% endset %}

        {{ form_widget(edit_form) }}
        {{ formPdl }}

    </form>

{% endblock %}