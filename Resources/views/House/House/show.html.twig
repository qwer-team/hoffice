{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block body %}
<h1 class = 'menu_sys_h1'>{{ "House\House"|trans({}, "house") }}</h1>


<table class="record_properties">
    <tbody>
        <tr>
            <th>{{ "id"|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "street"|trans({}, "house") }}</th>
            <td>{{ entity.street }}</td>
        </tr>
        <tr>
            <th>{{ "number"|trans({}, "house") }}</th>
            <td>{{ entity.number }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('house') }}">
             {{"Back to the list"|trans}}
        </a>
    </li>
    <li>
        <a href="{{ path('house_edit', { 'id': entity.id }) }}">
            {{ "Edit"|trans({}, "house") }}
        </a>
    </li>
    <li>
        <form action="{{ path('house_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ "Delete"|trans({}, "house") }}</button>
        </form>
    </li>
</ul>
{% endblock %}
