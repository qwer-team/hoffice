{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block search %}

{% endblock %}
{% block javascript %}
    {{ parent() }}
    {{ form_javascript(search_form) }}
{% endblock %}
{% block css %}
    {{ parent() }}
    {{ form_stylesheet(search_form) }}
{% endblock %}
{% block menu %}
    {{ parent() }}
{% endblock%}
{% block body %}

    <h1>Payment\Payment list</h1>

    <div class = 'menu_sys_main_conteiner'>

        <div>
            <form action="{{ path( 'payment_search' ) }}" method="post" {{ form_enctype( search_form ) }}>
                <label> {{ "search" | trans }}:&#160; </label>
                {{ form_widget( search_form ) }}
                <button type="submit"> {{ "find"|trans }} </button>
            </form>
        </div>
        
        {% block navigation %}    
            {#% include 'ItcAdminBundle::navigator.html.twig' with {'route': 'payment'} %#}
            {% include 'ItcAdminBundle::addnew.html.twig' with {'route': 'payment', 'parent_id': NULL } %}
        {% endblock %} 

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>N</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Oa1</th>
                    <th>Oa2</th>
                    <th>Txt1</th>
                    <th>Txt2</th>
                    <th>Summa1</th>
                    <th>Summa2</th>
                    <th>Summa3</th>
                    <th>Ucor</th>
                    <th>Dtcor</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>{{ summa.summa1 }}</td>
                    <td>{{ summa.summa2 }}</td>
                    <td>{{ summa.summa3 }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('payment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.N }}</td>
                    <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.status }}</td>
                    <td>{{ entity.oa1 }}</td>
                    <td>{{ entity.oa2 }}</td>
                    <td>{{ entity.txt1 }}</td>
                    <td>{{ entity.txt2 }}</td>
                    <td>{{ entity.summa1 }}</td>
                    <td>{{ entity.summa2 }}</td>
                    <td>{{ entity.summa3 }}</td>
                    <td>{{ entity.ucor }}</td>
                    <td>{% if entity.dtcor %}{{ entity.dtcor|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('payment_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('payment_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ block( "navigation" ) }}
        <div class="clear"></div>
    </div>
{% endblock %}