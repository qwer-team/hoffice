
{% extends 'ItcAdminBundle::layout.html.twig' %}
{% block menu %}
    {# скрываем меню #}
{% endblock %}
{% block javascript %}
    {{ parent() }}    
{% endblock%}
{% block css %}
    {{ parent() }}
{% endblock %}
{% block body %}
{#{{ tinymce_init() }}#}

<div class = 'menu_sys_top_menu_bg'></div>

<div class = 'menu_sys_main_conteiner'>

<h1>Invoice\Invoice creation</h1>
<h1>Created: {{date}}</h1>
<h1>Autor: {{user}}</h1>
<hr />

<form action="{{ path('invoice_create') }}" method="post" {{ form_enctype(form) }}>
    <div class = 'fl'>
        <button class = 'menu_sys_save_button' type="submit" alt="{{ "save"|trans }}"></button>
    </div>
    <div class = 'menu_sys_upper_form'>
        <div class = 'fl'>
            {{ form_row( form.N  ) }}
        </div>
        <div class = 'fl'>
            {{ form_row( form.contract_id)}}
            Contract <input type="text" class="entity_search enter_contract" 
                    data-link=".search_contract_id"
                    data-type-link="input"
                    data-route="ajax_search_contract"
                    data-after-search=".loadContractData" />
              <input type="hidden" class='loadContractData'
                    data-link=".search_contract_id"
                    data-route="ajax_data_from_contract" /> 
            
        </div>
        <div class="clear"></div>
        <br class = 'clr' />
        <hr />
        <table class="contract_more_data">
            <thead>
                <tr>
                    <th>Apartment number</th>
                    <th>FIO</th>
                    <th>S all</th>
                    <th>S live</th>
                    <th>S balcony</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
        
    <br class = 'clr' />
    <hr />

{{ form_rest(form) }}

</form>

</div>

{% endblock %}    
